                    //     $('#news_image').addClass('validate[required]');
                    //     $('#previewImage').hide();
                    // } else {
                    //     readURL(current);
                    // }
                    if(current.id == 'bg_image') {
                        readURL(current, 'previewImage');
                    } else {
                        readURL(current, 'previewImageNight');
                    }
                };

                img.src = _URL.createObjectURL(file);
            }

        });
    });
