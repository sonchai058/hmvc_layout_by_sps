                    //     $('#news_image').addClass('validate[required]');
                    //     $('#previewImage').hide();
                    // } else if (this.width < widthImg || this.height < heightImg) {
                    //     alert($('#textWidthHeightFile').text());
                    //     $('#news_image').val('');
